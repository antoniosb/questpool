<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Year</th>
      <th>Source</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr><td colspan="8" ><h4>Pendentes</h4></td></tr>
    <% @pending.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.year %></td>
        <td><%= question.source %></td>
        <td><%= question.user.email %></td>
        <td><%= question.status %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr><td colspan="8" ><h4>Reprovadas</h4></td></tr>
    <% @rejected.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= question.year %></td>
        <td><%= question.source %></td>
        <td><%= question.user.email %></td>
        <td><%= question.status %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tr><td colspan="8" ><h4>Aprovadas</h4></td></tr>
  <% @approved.each do |question| %>
    <tr>
      <td><%= question.content %></td>
      <td><%= question.year %></td>
      <td><%= question.source %></td>
      <td><%= question.user.email %></td>
      <td><%= question.status %></td>
      <td><%= link_to 'Show', question %></td>
      <td><%= link_to 'Edit', edit_question_path(question) %></td>
      <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>

